{
  "name": "async-conductor",
  "version": "0.0.1",
  "description": "library that helps to orchestrate asynchronous application components.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmnorc/async-conductor.git"
  },
  "keywords": [
    "typescript",
    "async",
    "conductor",
    "component"
  ],
  "author": "Dmitry Sedelnikov<dmnorc@gmail.com",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/dmnorc/async-conductor/issues"
  },
  "homepage": "https://github.com/dmnorc/async-conductor#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "precommit": "yarn lint",
    "coverage": "nyc --reporter=text yarn test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "prepare": "yarn build",
    "prettier": "prettier --config package.json src/**/*.ts",
    "lint": "eslint src --fix --ext .ts",
    "test": "yarn lint && yarn build && ts-mocha --paths 'test/**/test_*.ts' --exit"
  },
  "dependencies": {
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.2.0",
    "mocha": "^8.2.1",
    "chai": "^4.2.0",
    "istanbul": "^0.4.5",
    "mocha-lcov-reporter": "^1.3.0",
    "coveralls": "^3.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
